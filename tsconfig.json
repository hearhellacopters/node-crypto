{
  "compilerOptions": {
    "target": "ES2020",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["node", "mocha"],
    "esModuleInterop": true
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}